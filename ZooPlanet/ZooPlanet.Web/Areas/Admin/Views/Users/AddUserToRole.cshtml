@model AddUserToRoleModel

@{
    ViewData["Title"] = "Add User To 'Zoo Employee' Role";
}

<br />

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-area="Admin" asp-controller="UsersAdmin" asp-action="AddToZooEmployeeRole" method="post">
                <hr />
                <div class="form-group">
                    <label asp-for="@Model.UserName"></label>
                    <input asp-for="@Model.UserName" class="form-control" />
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add to role</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
