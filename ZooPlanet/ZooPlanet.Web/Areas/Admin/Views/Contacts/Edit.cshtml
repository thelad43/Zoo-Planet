@model ContactAdminViewModel

@{
    ViewData["Title"] = "Edit contact";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-area="Admin" asp-controller="Contacts" asp-action="Edit" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Title"></label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Message"></label>
                <input asp-for="@Model.Message" class="form-control" />
                <span asp-validation-for="@Model.Message" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <div class="checkbox-container">
                    <input asp-for="@Model.IsAnswered" id="checkbox-default" type="checkbox" />
                    <div class="checkbox-checkmark"></div>
                </div>
                <label asp-for="@Model.IsAnswered" for="checkbox-default"></label>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ContactType"></label>
                <select class="form-control" asp-for="@Model.ContactType" asp-items="Html.GetEnumSelectList<ContactType>()"></select>
                <span asp-validation-for="@Model.ContactType" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

