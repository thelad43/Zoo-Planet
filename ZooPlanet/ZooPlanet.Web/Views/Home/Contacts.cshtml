@model ContactViewModel

@{
    ViewData["Title"] = "Contact us";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Title"></label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Message"></label>
                <input asp-for="@Model.Message" class="form-control" />
                <span asp-validation-for="@Model.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ContactType"></label>
                <select class="form-control" asp-for="@Model.ContactType" asp-items="Html.GetEnumSelectList<ContactType>()"></select>
                <span asp-validation-for="@Model.ContactType" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
       
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-3">
        <br />
        <h4>Phone: 089 456 7890</h4>
        <h4>Email: zoo.planet@gmail.com</h4>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
